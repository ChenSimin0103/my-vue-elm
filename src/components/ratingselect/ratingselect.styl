@import "../../common/stylus/mixin.styl"

.ratingselect
  .rating-type
    padding 18px 0
    margin 0 18px
    border-bottom border-1px(#f6f)
    .block
      display inline-block
      padding 8px 12px
      margin-right 8px
      line-height 18px
      border-radius 2px
      font-size 12px
      color rgb(77,85,93)
      &.positive
        background rgba(0,160,220,0.2)
        &.active
          background rgb(0,160,220)
          color #fff
      &.negative
        background rgba(77,85,93,0.2)
        &.active
          background rgb(77,85,93)
          color #fff
      .count
        margin-left 2px
        font-size 8px
  .switch
    padding 12px 18px
    line-height 24px
    border-bottom border-1px(#f6f)
    color rgb(147,153,159)
    .icon-check_circle
      display inline-block
      vertical-align top
      margin-right 4px
      font-size 24px
      &.on
        color #00c850
    .text
      font-size 12px



